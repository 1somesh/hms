<p>
  <%= flash[:alert] unless flash[:alert].blank? %>
</p>
<div style="padding-left: 10px;">
 <div class="card" style="width:250px;border-style:solid; ;border-width: thin;">
    <img class="card-img-top" src=<%= current_user.image.image_url.to_s %> alt="Card image" style="width:100%">
    <div class="card-body">
      <h4 class="card-title"><%= current_user.first_name %></h4>
      <p class="card-text"><%= current_user.first_name %> is an architect and engineer</p>
    </div>
  </div> <br>
	<font class="profile_label"><b><%= label_tag "first name" %></b>:
			<%= current_user.first_name %><br>
	

	<font class="profile_label"><b><%= label_tag "last name" %></b>:
	<%= current_user.last_name %> <br>
	<font class="profile_label"><b><%= label_tag "Email" %></b>:
	<%= current_user.email %><br>	
	<font class="profile_label"><b><%= label_tag "role" %></b>:
		<%= current_user.role %><br>
	<font class="profile_label"><b><%= label_tag "Date of Birth" %></b>:
		<%= current_user.date_of_birth.strftime("%d-%B'%Y") %><br>
	<font class="profile_label"><b><%= label_tag "Gender" %></b>:
		<%= current_user.gender %><br>
	<font class="profile_label"><b>
	<%= form_for :user ,url: "/home/profile" do |f| %>	
    <%= label_tag "Profile Pic:" %></b><br />
    <%= f.file_field :image %>
    <div class="profile_image_upload"></div>
    <% end %>
  	<br>
		<br>
	<%= link_to "Edit Profile", edit_user_registration_path(current_user) %> | 	| <%= link_to "Back" ,"/appointments" %>

	</font>

	<% if current_user.image !=nil %>
	<% end %>

</div>