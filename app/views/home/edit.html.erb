
<div align="left" style="padding-left: 320px;">
	<%= form_for @user ,url: "/home/#{current_user.id}" do |f| %>
		<h3 class="new_apppointment">
			<%= label_tag "first name" %>: <%= f.text_field :first_name,{:value => current_user.first_name} %> 
		</h3>	
		<h3 class="new_apppointment"><%= label_tag "last name" %>: <%= f.text_field :last_name,{:value => current_user.last_name} %> 
		</h3>
		<h3 class="new_apppointment"><%= label_tag "role" %>: <%= f.select :role, ['doctor', 'patient']%>
		</h3>
		<h3 class="new_apppointment">	
			<%= label_tag "Profile picture" %>:
		</h3>
		<div class="field">
    		<%= f.file_field :image  %><br>
  		</div><br>
  		<%= f.submit "Save Changes" %><br /><br />
	<% end %>		
	<%= link_to "change password" , edit_user_registration_path %>
</div>

