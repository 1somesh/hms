<div align="left" class="div_spaceing">
<h2 class="new_apppointment" >Appointment information</h2>
<div>
  Doctor: <i><%= @appointment.doctor.first_name %></i><br>
  Date: <i><%= @appointment.date.strftime("%A,%d-%B'%Y") %></i><br>
  From: <%= @appointment.start_time.strftime("%H:%M") %> AM<br>
  To: <%= @appointment.finish_time.strftime("%H:%M") %> AM<br>
</div>

<h3 class="new_apppointment" >Notes:</h3><br>
        <div id="notes_list">
            <% @notes.each_with_index do |note,index| %>
              <div align="left" class="discription_area" >
                     <%= note.description %></br>  
                     <div align="right" class="note_owner">  
                          By: <%= User.find(note.user_id).first_name %> 
                     </div>
              </div><br>
            <% end %>
           
        </div>
  
<div align="left" class="div_spaceing"> 
<%= link_to "Add note" , new_appointment_note_path(@appointment,@appointment.notes.build), remote: true,class: "add_note_btn" %><br><br>

<div class="add_note">
    <%= form_for [@appointment,@appointment.notes.build] ,remote: true do |f| %>
        <%= hidden_field_tag 'note[user_id]' ,current_user.id %>
        <%= hidden_field_tag 'note[by]', current_user.first_name %>
        <div class="note_form" >
        </div>
    <% end %>
</div>
</div>
<br>
&nbsp<strong>Images:</strong><br><br>
    <div class="div_spaceing">
        <% if @appointment.images.size==0 %>
          <span>There are no images</span>
        <% end %>
        <% @appointment.images.each do |i| %>
           <div class="images">
              <%= link_to image_tag(i.image_url(:thumb).to_s) ,"#{i.image_url.to_s}" , class: "fancybox" %>  
           </div>   
        <% end %>
    </div>
  </div>

</div><br>
<%= link_to "Back", "/appointments" %>