<br /><br/>
<i>Appointment information</i>
<br /><br />
<div align="center">
  <div style=" width: 700px;height: 300px " >
         <div class="first_name" align="left"><%= @date %></div><br>
         <div class="first_name" align="left">Notes:<br /></div><br>
         <div align="left" style="background-color: #d4edfc;width: 500px" id="notes_list"> 
            <% @notes.each_with_index do |note,index| %>
               <div ><%= note.description %></div></br>  
               <div align="right">
                 By: <%= User.find(note.user_id).first_name %> 
               </div>
               <hr>
            <% end %>
         </div>   
  </div>
  <br />
  	<div class="profile_pic">
        <% @appointment.images.each do |i| %>
           <%= image_tag(i.image_url.to_s) %>
        <% end %>
    </div>
  </div>
</div>

 
<%= link_to "Add note" , new_appointment_note_path(@appointment,@appointment.notes.build), remote: true %><br><br>
<div class="add_note">
<%= form_for [@appointment,@appointment.notes.build] ,remote: true do |f| %>
<%= hidden_field_tag 'note[user_id]' ,current_user.id %>
<%= hidden_field_tag 'note[by]', current_user.first_name %>
<div class="note_form">
</div>
<% end %>
</div>

