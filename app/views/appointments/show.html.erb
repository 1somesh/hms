<h1 align="center">
  <b>
  Appointment information
</b>
</h1><hr>
<div class="appointment-information">
  <%= label_tag "Doctor:" %> <i><%= @appointment.doctor.first_name %></i><br>
  <%= label_tag "Date:" %> <i><%= @appointment.date.strftime("%A,%d-%B'%Y") %></i><br>
  <%= label_tag "From:" %> <%= @appointment.start_time.strftime("%H:%M") %> AM<br>
  <%= label_tag "To:" %> <%= @appointment.finish_time.strftime("%H:%M") %> AM<br>
  <%= label_tag "Status:" %> <%= @appointment.status %> <br>
  <% if @appointment.start_time <= Time.now && @appointment.finish_time >Time.now && @appointment.date==Date.today %>
    <%= link_to "Approve" , "/appointments/#{@appointment.id}/visited_patient_appointment" %><br>
  <% end %>  
</div>

<h2><b>Notes:</b></h2><br>
<div id="notes_list" class="panel-group">
    <% @notes.each_with_index do |note,index| %>
      <div align="left" class="panel panel-info" >
        <div class="panel-heading"> By: <%= User.find(note.user_id).first_name %> </div>
        <div class="panel-body"> <%= note.description %></div> </br>     
      </div><br>
    <% end %> 
</div>
<%= link_to "Add note",new_appointment_note_path(@appointment,@appointment.notes.build), remote: true,class: "btn btn-primary add_note_btn" %><br><br> 

<div class="add_note">
    <%= form_for [@appointment,@note] ,remote: true do |f| %>
        <div class="note_form">
        </div>
    <% end %>
</div><br>

&nbsp<strong>Images:</strong><br><br>
<div class="div_spaceing">
    <% if @appointment.images.size==0 %>
      <span>There are no images</span><br><br>
    <% end %>
    <% @appointment.images.each do |i| %>
       <div class="images">
          <%= link_to image_tag(i.image_url(:thumb).to_s) ,"#{i.image_url.to_s}" , class: "fancybox" %>  
       </div>   
    <% end %>
</div>
 
<a href="/appointments">
      <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-fast-backward"></span> Back
      </button>
   </a><br> <br>   
