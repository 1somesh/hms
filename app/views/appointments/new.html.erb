
<%= render 'error' %>

	<div  class="booking_slot" align="left">
	
	<%= form_for @appointment do |f| %>
	<%#= form_for  @appointment ,url: "/slots",remote: true do |f| %>
		<div>
			<h3 class="new_apppointment"><%= f.label :doctor_name %></h3>	
		</div>
		<%= f.collection_select :doctor_id, @doctors_list, :id, :first_name %><br/>
		<div ><br>
		
		<h3 class="new_apppointment">	<%= f.label :date %>	</h3>	
		</div>
		<%= f.date_select :date, :order => [:year, :month, :day], :start_year => 2018, :end_year => Time.now.year + 5 ,class: "doctor_id"%><br><br>
		<input type= "button" value = "Find Appointment" onclick="get_appointment_slot()">	
	<%# end %><br><br>
 
	<div class="slot_list">
		<div  class="slot_item">
			<% @slots.each do |slot| %>		
				<%= f.radio_button(:start_time,"#{slot}:00:00") %>					
				<%= label_tag(slot, "#{slot}:00 PM") %><br>
			<% end %>
		</div><br>
	</div>	

		<div >
			<h3 class="new_apppointment"><%= f.label :cause %></h3>
		</div>
		<%= f.text_area :note ,cols: 25 ,rows: 8%><br />	
 		<div ><br><br>
 			Upload Image 
 		</div><br>
 		<div class="field">
		    <%= f.file_field :image %>
		 </div><br>
	 	<%= f.submit 'Create Appointment' %>

	<% end %>	

</div>