
	<div  align="left">
	
	<%= form_for @appointment do |f| %>
		<div>
			<h3 class="new_apppointment"><%= f.label :doctor_name %></h3>	
		</div>
		<%= f.collection_select :doctor_id, @doctors_list, :id, :first_name ,{},{class: "remove_slot_list"} %><br/>
		<div ><br>
			<%= f.label :date %>	</h3>	
		</div>
		<%= f.date_select :date, :order => [:year, :month, :day], :start_year => 2018, :end_year => Time.now.year + 5 ,selected: Date.today+1,
		:class => "remove_slot_list" %><br><br>
		<input type= "button" value = "Find Appointment" onclick="get_appointment_slot()">	
	<br><br>
 	<% if @appointment.errors.messages[:start_time].present? %>
		<span style="color: red"> <%= @appointment.errors.messages[:start_time][0] %> </span>
	<% end %>	
	<div class="slot_list">
		<div  class="slot_item">
			<% @slots.each do |slot| %>		
			
			<% end %>
		</div><br>
	</div>	

		<div >
			<h3 class="new_apppointment"><%= f.label :cause %></h3>
		</div>
		<%= f.text_area :note ,cols: 25 ,rows: 8%>
		<%if @appointment.errors.messages[:notes].present? %>
		<span style="color: red"> <%= @appointment.errors.messages[:notes][0] %> </span>
		<% end %>
		<br />	
 		<div ><br><br>
 			Upload Image 
 		</div><br>
 		<div class="field">
		    <%= f.file_field :image %>
		 </div><br>
	 	<%= f.submit 'Create Appointment' %>

	<% end %>	
</div><br>
<%= link_to "Back", "/appointments" %>
