<% else %>
<div align="right"><%= link_to 'Create a new Appointment ', new_appointment_path(current_user.doctor_appointments.build) %></div>
<div class="center_div">
 		<font color="#005CB9" face="courier" size="3" >

<h1 id="heading">Appointment List</h1>	
 	<div class="list">
    <% @appointment_list.each do |appointments| %>
    	<br />
 	        <div class="container" align="center">
	          <div class="first_name" align="left"> <%= appointments.doctor.first_name %></div>
		        <td><%= appointments.date.strftime("%A,%d-%B'%Y") %></td>
		        <br />
		      	<%= link_to 'Show', appointments%>
		      	<% if !appointments.cancelled? %>
		        	<td><%= link_to 'Edit', edit_appointment_path(appointments) %></td>
		     			<%= link_to 'Delete', [appointments],:method => "delete" ,data: {confirm: "Are you sure?"}%><br>

		        <% end %>	
		        <div align="left">Status: <%= appointments.status %><br>
		        	<% begin %>
		        	From: <%= appointments.start_time.strftime("%I:%M%p") %><br>
		        	To:   <%= appointments.finish_time.strftime("%I:%M%p") %> <br>
		        	<% rescue %>
		        		<% puts "start time null for appointment id: #{appointments.id}" %>
		        	<% end %>	
		        </div>
		     </tr>
		 	</div>
		 
   <% end %>
<% end %><br>

</font>
</div>
<%= link_to 'Recent Appointments', "appointments/recent" %>
</div>
